<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Update"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.workflow-util,cq.workflow-output]">
    <content
        granite:id="workflow-international-bpace-update"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <common
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"/>
            <process
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"/>
            <inputs
                jcr:primaryType="nt:unstructured"
                jcr:title="Inputs"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sequenceID
                                granite:class="workflow-international-bpace-update-sequenceid"
                                granite:id="workflow-international-bpace-update-sequenceid"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="fd/workflow/components/common/variablePropertyComponent"
                                fieldDescription="The last sequence ID of the session"
                                fieldLabel="Sequence ID"
                                name="./metaData/sequenceID"
                                required="{Boolean}true"
                                type="java.lang.String">
                                <inputfield
                                    granite:class="workflow-variable-input"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            </sequenceID>
                            <data
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <dataFieldSet
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="fd/workflow/components/common/inputOutputComponent"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    categories="RELATIVE_PLOAD USE_PAYLOAD ABSOLUTE_PATH VARIABLE FILE_PAYLOAD BLANK"
                                    label="The form data to update in the database"
                                    name="data"
                                    required="true"
                                    variabletype="org.w3c.dom.Document"/>
                            </data>
                            <status
                                granite:class="workflow-international-bpace-update-status"
                                granite:id="workflow-international-bpace-update-status"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="fd/workflow/components/common/variablePropertyComponent"
                                fieldDescription="The status of the submission"
                                fieldLabel="Status"
                                name="./metaData/status"
                                required="{Boolean}true"
                                type="java.lang.Long">
                                <inputfield
                                    granite:class="workflow-variable-input"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                            </status>
                        </items>
                    </column>
                </items>
            </inputs>
        </items>
    </content>
</jcr:root>
